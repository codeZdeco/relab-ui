{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "outDir": "lib",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@relab-ui/internal": [
        "./components/.internal"
      ],
      "@relab-ui/internal/*": [
        "./components/.internal/*"
      ],
      "@relab-ui/core": [
        "./components/core"
      ],
      "@relab-ui/core/*": [
        "./components/core/*"
      ],
      "@lodash": [
        "./@lodash"
      ]
    }
  },
  "include": [
    "./**/*.tsx",
    "./**/*"
  ],
  "exclude": [
    "**/build",
    "**/node_modules"
  ]
}